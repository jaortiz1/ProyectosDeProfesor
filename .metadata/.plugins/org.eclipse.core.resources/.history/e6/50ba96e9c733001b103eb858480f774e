			switch (opcion) {
			case 0:
				System.out.println("adios");
				break;
			case 1:
				
				break;
			case 2:
				
				break;
			case 3:
				
				break;
			case 4:
				
				break;
			default:
				System.out.println("Error");
			}
		} while (opcion != 0);

	}

}
